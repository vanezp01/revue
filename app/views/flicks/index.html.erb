<h1 class="current-category"><%= params[:category] %></h1>

<% if @flicks.count == 0 %>
	<h3>There are no movies in this category</h3>
<% else %>
	<div class="row">
		<% @flicks.each do |flick| %>
			<div class="col-md-3">
				<a href="/flicks/ <%= flick.id %>">
					<%= image_tag flick.flick_img.url(:flick_index), class: "flick" %>
				</a>
			</div>
		<% end %>
	</div>
<% end %>
